" Determine the type of a file based on its name and possibly
" its contents. Auto-indent each filetype.
filetype indent plugin on

" Enable syntax highlighting.
syntax on

" Use case insensitive search, except when using capital letters.
set ignorecase
set smartcase

set autoindent

set ruler

set number

set shiftwidth=4
set softtabstop=4
set expandtab

set bs=2

